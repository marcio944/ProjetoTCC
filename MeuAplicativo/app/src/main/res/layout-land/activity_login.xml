<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuário.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText_Email"
                android:layout_width="290dp"
                android:layout_height="47dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="175dp"
                android:drawableLeft="@drawable/ic_email"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName" />
            <EditText
                android:id="@+id/editText_Password"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_password"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button_Login"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="162dp"
                android:onClick="efetuarLogin"
                android:text="Login" />

            <TextView
                android:id="@+id/textView_Cadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/editText_Email"
                android:layout_marginBottom="99dp"
                android:text="NÃO É CADASTRADO?" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView_Cadastro"
                android:layout_marginEnd="105dp"
                android:onClick="exibirCadastro"
                android:text="CADASTRE-SE"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView_Recuperar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/editText_Email"
                android:layout_marginBottom="61dp"
                android:onClick="recuperarSenha"
                android:text="RECUPERAR SENHA"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

</android.support.constraint.ConstraintLayout>