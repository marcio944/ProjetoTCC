<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introducao.Questao2AlgoritmosActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="O comando 29 = A atribui à variável A o valor 29."
            android:textSize="18dp"/>

        <Button
            android:id="@+id/button61"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="38dp"
            android:layout_marginStart="36dp"
            android:background="@color/colorPrimary"
            android:text="Anterior"
            android:onClick="anterior"
            android:textColor="#ffffff"  />

        <Button
            android:id="@+id/button62"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button61"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="39dp"
            android:background="@color/colorPrimary"
            android:text="Próximo"
            android:onClick="proximo"
            android:textColor="#ffffff" />

        <RadioGroup
            android:layout_width="118dp"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="155dp" >

            <RadioButton
                android:id="@+id/radioButton41"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Certo"  />

            <RadioButton
                android:id="@+id/radioButton40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Errado" />
        </RadioGroup>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>