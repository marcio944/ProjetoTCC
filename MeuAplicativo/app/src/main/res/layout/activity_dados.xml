<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".Dados.DadosActivity">


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:background="#FFFF00"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Primitivos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-220dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Tipos Primitivos"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Primitivos"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-180dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:onClick="primitivos"
                android:text="Iniciar"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Constantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-260dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Constantes e Variáveis"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Constantes"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-215dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="constantes_variaveis"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Identificacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-210dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Identificação"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Identificacao"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-155dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Definicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-190dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Definição"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Definicao"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-140dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Atribuicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-195dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Atribuição"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Atribuicao"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-140dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>