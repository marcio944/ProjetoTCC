<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".HomogÃªneas.HomogeneasActivity">

<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:background="#FFFF00"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewUnidimensionais"
            android:layout_width="275dp"
            android:layout_height="393dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="56dp"
            android:background="#FFFFFF"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewUnidimensionais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-270dp"
            android:layout_marginTop="96dp"
            android:fontFamily="Times new Roman"
            android:text="Vetores Unidimensionais"
            android:textSize="24dp" />

        <Button
            android:id="@+id/buttonUnidimensionais"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="190dp"
            android:layout_marginStart="-225dp"
            android:layout_marginTop="350dp"
            android:background="@color/colorPrimary"
            android:text="Iniciar"
            android:onClick="unidimensionais"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/viewBidimensionais"
            android:layout_width="275dp"
            android:layout_height="393dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="56dp"
            android:background="#FFFFFF"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewBidimensionais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-260dp"
            android:layout_marginTop="96dp"
            android:fontFamily="Times new Roman"
            android:text="Vetores Bidimensionais"
            android:textSize="24dp" />

        <Button
            android:id="@+id/buttonBidimensionais"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="190dp"
            android:layout_marginStart="-215dp"
            android:layout_marginTop="350dp"
            android:background="@color/colorPrimary"
            android:text="Iniciar"
            android:onClick="condicaoComposta"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/viewMultidimensionais"
            android:layout_width="300dp"
            android:layout_height="393dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="56dp"
            android:background="#FFFFFF"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewMultidimensionais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-290dp"
            android:layout_marginTop="96dp"
            android:fontFamily="Times new Roman"
            android:text="Vetores Multidimensionais"
            android:textSize="24dp" />

        <Button
            android:id="@+id/buttonMultidimensionais"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="190dp"
            android:layout_marginStart="-235dp"
            android:layout_marginTop="350dp"
            android:background="@color/colorPrimary"
            android:text="Iniciar"
            android:onClick="condicaoEncadeada"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</HorizontalScrollView>

</LinearLayout>