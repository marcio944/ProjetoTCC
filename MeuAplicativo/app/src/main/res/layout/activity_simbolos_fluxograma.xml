<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introducao.SimbolosFluxogramaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewSimbolos"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Simbolos utilizados na construção de um fluxograma"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="50dp" />

        <ImageView
            android:id="@+id/imageViewSimbolos"
            android:layout_width="338dp"
            android:layout_height="262dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/simbolos_fluxograma"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="114dp" />

        <Button
            android:id="@+id/button_retornarExemploFluxograma"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:layout_marginStart="30dp                                                                                                                           "
            android:background="@color/colorPrimary"
            android:onClick="anteriorExemploFluxograma"
            android:text="Anterior"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="480dp" />

        <Button
            android:id="@+id/button_Proximo"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageViewSimbolos"
            android:layout_alignTop="@+id/button_retornarExemploFluxograma"
            android:background="@color/colorPrimary"
            android:onClick="proximoQuestao1Fluxograma"
            android:text="Próximo"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="239dp"
            tools:layout_editor_absoluteY="480dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>