<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Introducao.Questao3PseudocodigoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            app:srcCompat="@drawable/questao3_pseudocodigo" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:text="Considerando como entrada os valores 8, 5, 7, 0 complete com o valor de saída do algoritmo acima." />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginBottom="228dp"
            android:text="Média aritmética = " />

        <EditText
            android:id="@+id/editText"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="149dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button11"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="42dp"
            android:layout_marginStart="32dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:onClick="anterior"
            android:text="Anterior" />

        <Button
            android:id="@+id/button12"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button11"
            android:layout_marginEnd="38dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:onClick="proximo"
            android:text="Próximo" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>