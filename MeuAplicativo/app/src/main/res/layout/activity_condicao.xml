<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Condicao.CondicaoActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:background="#FFFF00"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-240dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Condições Simples"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Simples"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-195dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="condicaoSimples"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Composta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-260dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Condições Compostas"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Composta"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-215dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="condicaoComposta"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Encadeada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-265dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Condições Encadeadas"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Encadeada"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-215dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="condicaoEncadeada"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>