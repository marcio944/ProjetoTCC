                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Partes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-265dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Partes de um Algoritmo"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Partes"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-215dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="partesAlgoritmo"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view_Fluxograma"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Fluxograma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-200dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="Fluxograma"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Fluxograma"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-155dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="fluxograma"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/view_Pseudocodigo"
                android:layout_width="275dp"
                android:layout_height="393dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="56dp"
                android:background="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView_Pseudocodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-215dp"
                android:layout_marginTop="96dp"
                android:fontFamily="Times new Roman"
                android:text="PseudocÃ³digo"
                android:textSize="24dp" />

            <Button
                android:id="@+id/button_Pseudocodigo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="-165dp"
                android:layout_marginTop="350dp"
                android:background="@color/colorPrimary"
                android:text="Iniciar"
                android:onClick="pseudocodigo"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>